{
  "compilerOptions": {
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "module": "es6",
    "target": "es6",
    "jsx": "react",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "plugins": [{
      "name": "typescript-plugin-css-modules",
    }],
    "paths": {
      "@/*": ["./client/*"],
    },
  },
  "include": ["./client/**/*.ts", "./client/**/*.tsx"],
  "exclude": ["./node_modules"]
}
